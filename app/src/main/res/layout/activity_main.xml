<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="314dp"
        android:layout_height="419dp"
        android:layout_marginTop="@dimen/screenMargin"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="@dimen/bottomMargin"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.386">

        <TextView
            android:id="@+id/textView"
            style="@style/textViewCustom"
            android:layout_width="@dimen/textViewWidth"
            android:layout_height="@dimen/textViewHeight"
            android:text="First name"
            android:layout_marginBottom="@dimen/bottomMarginElems"
            />

        <EditText
            android:id="@+id/editTextTextPersonName"
            style="@style/EditTextCustom"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:layout_marginBottom="@dimen/bottomMargin"
            android:hint="Enter Here"
            android:inputType="text"
            android:paddingLeft="@dimen/leftPadding"
             />

        <TextView
            android:id="@+id/textView2"
            style="@style/textViewCustom"
            android:layout_width="@dimen/textViewWidth"
            android:layout_height="@dimen/textViewHeight"
            android:text="Last Name"
            android:layout_marginBottom="@dimen/bottomMarginElems"

            />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            style="@style/EditTextCustom"
            android:layout_width="@dimen/editTextWidth"
            android:layout_height="@dimen/editTextHeight"
            android:hint="Enter Here"
            android:inputType="text"
            android:paddingLeft="@dimen/leftPadding"
            android:layout_marginBottom="@dimen/bottomMargin"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_margin="@dimen/screenMargin"
            android:text="Click Here" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>